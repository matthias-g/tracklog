<%- title "Add User" -%>
<h1>Add User</h1>

<%= form_for [:admin, @user] do |f| %>
  <div class="form">
    <div class="row">
      <div class="label">
        <label for="user_username">Username</label>
      </div>
      <div class="field">
        <%= f.text_field :username %>
        <%- @user.errors[:username].each do |message| -%>
          <p class="error">Username <%= message %></p>
        <%- end -%>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="user_name">Name</label>
      </div>
      <div class="field">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="user_password">Password</label>
      </div>
      <div class="field">
        <%= f.password_field :password %>
        <%- @user.errors[:password].each do |message| -%>
          <p class="error">Password <%= message %></p>
        <%- end -%>
      </div>
    </div>
    <div class="row">
      <div class="label">
        Distance Units
      </div>
      <div class="field controls">
        <label>
          <%= f.radio_button :distance_units, "metric" %>
          Metric
        </label>
        <label>
          <%= f.radio_button :distance_units, "imperial" %>
          Imperial
        </label>
      </div>
    </div>
    <div class="row">
      <div class="label">
        Admin
      </div>
      <div class="field controls">
        <label><%= f.check_box :is_admin %></label>
      </div>
    </div>
    <div class="row">
      <div class="label">
        Restricted to read access
      </div>
      <div class="field controls">
        <label><%= f.check_box :is_restricted %></label>
      </div>
    </div>
    <div class="row submit">
      <%= submit_tag "Create User" %>
    </div>
  </div>
<% end %>
